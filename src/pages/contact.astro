---
// Page Contact - Formulaire de demande de devis
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout 
  title="Contact - Demande de devis gratuit | Helenn Lab" 
  description="Demandez votre devis gratuit pour la création de votre site web professionnel. Réponse garantie sous 24h."
>
  <section class="contact-hero">
    <div class="container">
      <div class="contact-header animate-on-scroll">
        <h1 class="contact-title">Demandez votre devis gratuit</h1>
        <p class="contact-intro">
          Remplissez le formulaire ci-dessous et nous vous répondrons sous 24h avec une proposition 
          personnalisée adaptée à vos besoins.
        </p>
      </div>
    </div>
  </section>

  <section class="contact-form-section">
    <div class="contact-wrapper">
        <div class="contact-info animate-on-scroll">
          <h2 class="info-title">Pourquoi nous choisir ?</h2>
          <ul class="info-list">
            <li class="info-item">
              <strong>Réactivité</strong>
              <p>Réponse garantie sous 24h</p>
            </li>
            <li class="info-item">
              <strong>Transparence</strong>
              <p>Devis détaillé et sans surprise</p>
            </li>
            <li class="info-item">
              <strong>Accompagnement</strong>
              <p>Suivi personnalisé tout au long du projet</p>
            </li>
            <li class="info-item">
              <strong>Qualité</strong>
              <p>Sites web modernes et performants</p>
            </li>
          </ul>
        </div>

        <form class="contact-form animate-on-scroll" id="contact-form" method="POST" action="#">
          <div class="form-group">
            <label for="name" class="form-label">Nom complet *</label>
            <input 
              type="text" 
              id="name" 
              name="name" 
              class="form-input" 
              required 
              placeholder="Votre nom"
              aria-required="true"
            />
          </div>

          <div class="form-group">
            <label for="email" class="form-label">Email *</label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              class="form-input" 
              required 
              placeholder="votre@email.com"
              aria-required="true"
            />
          </div>

          <div class="form-group">
            <label for="phone" class="form-label">Téléphone</label>
            <input 
              type="tel" 
              id="phone" 
              name="phone" 
              class="form-input" 
              placeholder="06 12 34 56 78"
            />
          </div>

          <div class="form-group">
            <label for="company" class="form-label">Entreprise</label>
            <input 
              type="text" 
              id="company" 
              name="company" 
              class="form-input" 
              placeholder="Nom de votre entreprise"
            />
          </div>

          <div class="form-group">
            <label for="message" class="form-label">Décrivez votre projet *</label>
            <textarea 
              id="message" 
              name="message" 
              class="form-input form-textarea" 
              rows="6" 
              required 
              placeholder="Parlez-nous de votre projet, vos objectifs, vos besoins spécifiques..."
              aria-required="true"
            ></textarea>
          </div>

          <div class="form-group form-checkbox">
            <input 
              type="checkbox" 
              id="consent" 
              name="consent" 
              required
              aria-required="true"
            />
            <label for="consent" class="checkbox-label">
              J'accepte que mes données soient utilisées pour me recontacter dans le cadre de ma demande de devis. *
            </label>
          </div>

          <button type="submit" class="btn btn-primary btn-large btn-submit">
            Envoyer la demande
          </button>

          <p class="form-note">
            * Champs obligatoires
          </p>
        </form>
      </div>
  </section>
</BaseLayout>

<script>
  // Initialiser les animations au scroll (cohérent avec index)
  function initScrollAnimations() {
    if (typeof window === 'undefined') return;

    const observerOptions = {
      threshold: 0.15,
      rootMargin: '0px 0px -80px 0px',
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
        }
      });
    }, observerOptions);

    const elements = document.querySelectorAll('.animate-on-scroll');
    elements.forEach((el) => observer.observe(el));
    
    // Rendre visible immédiatement les éléments déjà dans le viewport
    elements.forEach((el) => {
      const rect = el.getBoundingClientRect();
      if (rect.top < window.innerHeight * 0.8 && rect.bottom > 0) {
        setTimeout(() => {
          el.classList.add('visible');
        }, 50);
      }
    });
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initScrollAnimations);
  } else {
    setTimeout(initScrollAnimations, 150);
  }

  // Gestion du formulaire (à adapter selon votre backend)
  const form = document.getElementById('contact-form');
  
  if (form) {
    form.addEventListener('submit', (e) => {
      e.preventDefault();
      
      // Ici, vous pouvez ajouter la logique d'envoi
      // Par exemple : envoi vers un endpoint API, email, etc.
      
      // Message de confirmation temporaire
      const submitBtn = form.querySelector('.btn-submit');
      const originalText = submitBtn?.textContent;
      
      if (submitBtn) {
        submitBtn.textContent = 'Envoi en cours...';
        submitBtn.disabled = true;
        
        // Simulation d'envoi (à remplacer par votre logique)
        setTimeout(() => {
          alert('Merci pour votre demande ! Nous vous répondrons sous 24h.');
          form.reset();
          submitBtn.textContent = originalText || 'Envoyer la demande';
          submitBtn.disabled = false;
        }, 1000);
      }
    });
  }
</script>

<style>
  /* Contact Hero - Moderne et engageant */
  .contact-hero {
    padding: var(--spacing-2xl) 0 var(--spacing-xl);
    background: linear-gradient(135deg, var(--bg) 0%, var(--bg-dark) 100%);
    text-align: center;
  }

  .contact-header {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 var(--spacing-md);
  }

  .contact-title {
    font-size: clamp(2.5rem, 5.5vw, 4rem);
    margin-bottom: var(--spacing-md);
    color: var(--text);
    letter-spacing: -0.02em;
    font-weight: 700;
    line-height: 1.2;
  }

  .contact-intro {
    font-size: clamp(1.125rem, 2vw, 1.375rem);
    color: var(--text);
    line-height: 1.75;
    letter-spacing: 0.01em;
    opacity: 0.95;
  }

  /* Contact Form Section - Design moderne et engageant */
  .contact-form-section {
    padding: var(--spacing-3xl) 0;
    background: linear-gradient(180deg, var(--bg) 0%, var(--bg-dark) 100%);
    position: relative;
  }

  .contact-form-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
  }

  .contact-wrapper {
    display: grid;
    grid-template-columns: 1fr 1.3fr;
    gap: var(--spacing-lg);
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 var(--spacing-lg);
    width: 100%;
    align-items: start;
  }

  /* Contact Info - Design moderne */
  .contact-info {
    padding: var(--spacing-lg);
    width: 100%;
    box-sizing: border-box;
    position: sticky;
    top: calc(var(--spacing-lg) + 80px);
  }

  .info-title {
    font-size: clamp(2rem, 3vw, 2.75rem);
    margin-bottom: var(--spacing-md);
    color: var(--text);
    font-weight: 700;
    letter-spacing: -0.02em;
    line-height: 1.3;
  }

  .info-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .info-item {
    padding: var(--spacing-md) var(--spacing-lg);
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.05) 0%, rgba(255, 255, 255, 0.02) 100%);
    border-radius: var(--radius-lg);
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: all var(--transition-smooth);
    backdrop-filter: blur(10px);
    position: relative;
    overflow: hidden;
  }

  .info-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 3px;
    height: 100%;
    background: linear-gradient(180deg, var(--cta) 0%, var(--cta-hover) 100%);
    opacity: 0;
    transition: opacity var(--transition-base);
  }

  .info-item:hover {
    transform: translateY(-4px);
    border-color: rgba(255, 255, 255, 0.2);
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.08) 0%, rgba(255, 255, 255, 0.04) 100%);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
  }

  .info-item:hover::before {
    opacity: 1;
  }

  .info-item strong {
    display: block;
    font-size: clamp(1.375rem, 2vw, 1.625rem);
    margin-bottom: var(--spacing-sm);
    color: var(--text);
    font-weight: 600;
    letter-spacing: -0.01em;
    line-height: 1.4;
  }

  .info-item p {
    margin: 0;
    color: var(--text);
    font-size: clamp(1.125rem, 1.8vw, 1.25rem);
    line-height: 1.8;
    letter-spacing: 0.01em;
    opacity: 0.95;
  }

  /* Contact Form - Design moderne et engageant */
  .contact-form {
    padding: var(--spacing-xl) var(--spacing-xl);
    background: linear-gradient(135deg, #ffffff 0%, #fafafa 100%);
    border-radius: 24px;
    border: 1px solid rgba(26, 61, 46, 0.08);
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15), 0 0 0 1px rgba(255, 255, 255, 0.5) inset;
    width: 100%;
    box-sizing: border-box;
    min-width: 0;
    position: relative;
    overflow: hidden;
  }

  .contact-form::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--bg) 0%, var(--bg-light) 50%, var(--bg) 100%);
  }

  .form-group {
    margin-bottom: var(--spacing-md);
    position: relative;
  }

  .form-label {
    display: block;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: var(--bg);
    font-size: clamp(1.125rem, 1.8vw, 1.25rem);
    letter-spacing: -0.01em;
    line-height: 1.5;
  }

  .form-input {
    width: 100%;
    padding: 1rem 1.5rem;
    font-size: clamp(1.125rem, 1.8vw, 1.25rem);
    font-family: var(--font-primary);
    border: 2px solid rgba(26, 61, 46, 0.12);
    border-radius: 12px;
    background-color: #ffffff;
    color: var(--bg);
    transition: all var(--transition-smooth);
    line-height: 1.7;
    box-sizing: border-box;
    position: relative;
  }

  .form-input:hover {
    border-color: rgba(26, 61, 46, 0.25);
    background-color: #fafafa;
  }

  .form-input:focus {
    outline: none;
    border-color: var(--bg);
    box-shadow: 0 0 0 4px rgba(26, 61, 46, 0.08), 0 4px 12px rgba(26, 61, 46, 0.1);
    background-color: #ffffff;
    transform: translateY(-1px);
  }

  .form-input::placeholder {
    color: var(--bg);
    opacity: 0.35;
    font-style: italic;
  }

  .form-textarea {
    resize: vertical;
    min-height: 180px;
    line-height: 1.8;
    font-family: var(--font-primary);
    font-size: clamp(1.125rem, 1.8vw, 1.25rem);
  }

  .form-checkbox {
    display: flex;
    align-items: flex-start;
    gap: var(--spacing-sm);
    margin-bottom: var(--spacing-md);
    padding: var(--spacing-sm);
    background-color: rgba(26, 61, 46, 0.03);
    border-radius: var(--radius-md);
    transition: background-color var(--transition-base);
  }

  .form-checkbox:hover {
    background-color: rgba(26, 61, 46, 0.05);
  }

  .form-checkbox input[type="checkbox"] {
    margin-top: 0.25rem;
    width: 22px;
    height: 22px;
    cursor: pointer;
    accent-color: var(--bg);
    flex-shrink: 0;
  }

  .checkbox-label {
    font-size: clamp(1rem, 1.5vw, 1.125rem);
    line-height: 1.7;
    color: var(--bg);
    cursor: pointer;
    opacity: 0.85;
  }

  .btn-submit {
    width: 100%;
    margin-top: var(--spacing-sm);
    padding: 1.25rem 2rem;
    font-size: 1.125rem;
    font-weight: 700;
    background: linear-gradient(135deg, var(--bg) 0%, var(--bg-light) 100%);
    color: #ffffff;
    border-radius: 12px;
    transition: all var(--transition-smooth);
    border: none;
    cursor: pointer;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    position: relative;
    overflow: hidden;
    box-shadow: 0 8px 24px rgba(26, 61, 46, 0.3);
  }

  .btn-submit::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s;
  }

  .btn-submit:hover {
    transform: translateY(-3px);
    box-shadow: 0 12px 32px rgba(26, 61, 46, 0.4);
    background: linear-gradient(135deg, var(--bg-light) 0%, var(--bg) 100%);
  }

  .btn-submit:hover::before {
    left: 100%;
  }

  .btn-submit:active {
    transform: translateY(-1px);
  }

  .form-note {
    margin-top: var(--spacing-sm);
    font-size: clamp(0.9375rem, 1.3vw, 1rem);
    color: var(--bg);
    text-align: center;
    letter-spacing: 0.01em;
    opacity: 0.5;
  }

  /* Responsive - Premium */
  @media (max-width: 1400px) {
    .contact-wrapper {
      max-width: 100%;
      padding: 0 var(--spacing-xl);
    }
  }

  @media (max-width: 1200px) {
    .contact-wrapper {
      grid-template-columns: 1fr 1fr;
      padding: 0 var(--spacing-lg);
    }

    .contact-form {
      padding: var(--spacing-2xl) var(--spacing-2xl);
    }
  }

  @media (max-width: 968px) {
    .contact-wrapper {
      grid-template-columns: 1fr;
      gap: var(--spacing-xl);
      padding: 0 var(--spacing-lg);
    }

    .contact-info {
      order: 2;
      padding: var(--spacing-lg);
      position: static;
    }

    .contact-form {
      order: 1;
      padding: var(--spacing-xl);
    }
  }

  @media (max-width: 768px) {
    .contact-hero {
      padding: var(--spacing-xl) 0 var(--spacing-lg);
    }

    .contact-form-section {
      padding: var(--spacing-2xl) 0;
    }

    .contact-wrapper {
      gap: var(--spacing-lg);
      padding: 0 var(--spacing-md);
    }

    .contact-form {
      padding: var(--spacing-lg);
    }

    .contact-info {
      padding: var(--spacing-md);
    }

    .contact-title {
      font-size: clamp(2rem, 6vw, 3rem);
      margin-bottom: var(--spacing-sm);
    }

    .contact-intro {
      font-size: clamp(1rem, 3vw, 1.125rem);
    }

    .info-title {
      font-size: clamp(1.375rem, 4vw, 1.75rem);
      margin-bottom: var(--spacing-md);
    }

    .form-group {
      margin-bottom: var(--spacing-lg);
    }

    .form-input {
      padding: 1rem 1.25rem;
      font-size: 0.9375rem;
    }

    .form-label {
      font-size: 0.875rem;
      margin-bottom: 0.5rem;
    }
  }

  @media (max-width: 480px) {
    .contact-wrapper {
      padding: 0 var(--spacing-sm);
    }

    .contact-form {
      padding: var(--spacing-md);
    }

    .contact-info {
      padding: var(--spacing-sm);
    }

    .info-item {
      padding: var(--spacing-md) var(--spacing-lg);
    }

    .form-group {
      margin-bottom: var(--spacing-md);
    }

    .btn-submit {
      padding: 1.125rem 2rem;
      font-size: 1rem;
    }
  }
</style>
